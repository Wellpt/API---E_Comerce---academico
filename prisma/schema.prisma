generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//Usuario
model User {
  id    String     @id // chave primaria da tabela
  name  String
  email String
  password String
  compras Compra[]

}
// Marca
model Marca {
  id Int @id @default(autoincrement())
  name String
  produtos Produto[]
}
//produto
model Produto {
  id String @id
  descricao String
  valorUnitario Decimal
  qtd Int
  marcaId Int
  marca Marca @relation(fields: [marcaId], references: [id])
  items CompraItems[]
}
//compra
model Compra {
  id String @id
  userId String
  user User @relation(fields: [userId], references: [id])
  valorTotal Decimal
  items CompraItems[]
}
//items 
model CompraItems {
  id Int @id @default(autoincrement())
  compraId String
  compra Compra @relation(fields: [compraId], references: [id])
  produtoId String
  produto Produto @relation(fields: [produtoId], references: [id])
  qtd Int
  valorUnitario Decimal
}